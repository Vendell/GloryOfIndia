<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deals and Offers"
        android:textSize="40dp"
        android:layout_gravity="center"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Offer 1 - 20% OFF Your 1st Order"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Offer 2 - Order 7 times 8th is FREE" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Deal 1 - Family Pack - save up to $18.00"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="1 x 2 Pieces of Veg Samosa, 3 x Curries (Veg, Chicken, Lamb, Beef), 2 x Naan, 1 x 4 Pappdams, 1 x 2 Saffron Rice, 1 x Raita, 1 x Pickle, 1 x Mango Chutney"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Deal 2 - Meal for Couple - save up to $12.00"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="1 x 2 Pieces of Onion Bhaji, 2 x Curries (Veg, Chicken, Lamb, Beef), 1 x Naan, 1 x 4 Pappdams, 1 x 2 Saffron Rice, 1 x Raita" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Deal 3 - Big Meal Pack - save up to $25.00"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="1 x Choice of Entree (Veg, Chicken, Lamb), 4 x Curries (Veg, Chicken, Lamb, Beef), 5 x Naan, 1 x 3 Saffron Rice, 1 x 6 Papadums, 1 x Raita, 1 x Pickle, 1 x Mango Chutney"/>

</LinearLayout>

