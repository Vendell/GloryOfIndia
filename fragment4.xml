<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/goi_background"
    android:elevation="0dp"
    android:clickable="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Offer 1 - 20% OFF Your 1st Order"
        android:textSize="20dp"
        android:background="#ffffff"
        android:paddingBottom="10dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#ffffff"
        android:text="Offer 2 - Order 7 times 8th is FREE"
        android:layout_below="@+id/button1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:background="#ffffff"
        android:layout_below="@id/button2"
        android:text="Deal 1 - Family Pack - save up to $18.00"
        android:textStyle="bold"
        android:paddingTop="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:paddingTop="1dp"
        android:background="#ffffff"
        android:paddingBottom="10dp"
        android:layout_below="@+id/button6"
        android:text="1 x 2 Pieces of Veg Samosa, 3 x Curries (Veg, Chicken, Lamb, Beef), 2 x Naan, 1 x 4 Pappdams, 1 x 2 Saffron Rice, 1 x Raita, 1 x Pickle, 1 x Mango Chutney" />

    <TextView
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button4"
        android:textSize="20dp"
        android:paddingTop="30dp"
        android:background="#ffffff"
        android:text="Deal 2 - Meal for Couple - save up to $12.00"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:paddingTop="1dp"
        android:background="#ffffff"
        android:paddingBottom="10dp"
        android:layout_below="@+id/button7"
        android:text="1 x 2 Pieces of Onion Bhaji, 2 x Curries (Veg, Chicken, Lamb, Beef), 1 x Naan, 1 x 4 Pappdams, 1 x 2 Saffron Rice, 1 x Raita" />

    <TextView
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:paddingTop="30dp"
        android:background="#ffffff"
        android:layout_below="@+id/button3"
        android:text="Deal 3 - Big Meal Pack - save up to $25.00"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:paddingTop="1dp"
        android:background="#ffffff"
        android:paddingBottom="10dp"
        android:layout_below="@+id/button8"
        android:text="1 x Choice of Entree (Veg, Chicken, Lamb), 4 x Curries (Veg, Chicken, Lamb, Beef), 5 x Naan, 1 x 3 Saffron Rice, 1 x 6 Papadums, 1 x Raita, 1 x Pickle, 1 x Mango Chutney"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deals and Offers"
        android:textSize="40dp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
</ScrollView>